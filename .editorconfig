root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{c,h}]
indent_style = space
indent_size = 4
c_include_path = "include"
curly_bracket_next_line = false
indent_brace_style = "K&R"
continuation_indent_size = 2

[{Makefile*,*.mk}]
indent_style = tab
indent_size = 4
